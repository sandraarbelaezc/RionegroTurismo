<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rionegroturismo.BarTresFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/bar3"
            android:textAlignment="center"
            android:textColor="@color/antiquewhite"
            android:textStyle="italic"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bar3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="¡Arte-Bar puedes disfrutar de la mejor música acompañado de arte y cultura!"
            android:textColor="@color/antiquewhite"
            android:textAlignment="textEnd"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="A dos cuadras del parque principal, Rionegro"
            android:textColor="@color/antiquewhite"
            android:textAlignment="textEnd"
            android:textStyle="italic"/>

    </LinearLayout>

</FrameLayout>
